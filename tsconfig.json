{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "baseUrl": "./",
    "types": ["node", "jest"],
    "paths": {
      "*": [
        "types/*"
      ]
    },
    "typeRoots": [
      "types/**/*",
      "node_modules/@types"
    ],
    "downlevelIteration": true,
    "lib": ["es2015", "dom"],
    "esModuleInterop": true
  }
}
