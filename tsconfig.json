{
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "baseUrl": "./",
    "noEmit": false,
    "declarationDir": "dist/types",
    "types": ["node", "jest"],
    "paths": {
      "*": [
        "types/*"
      ]
    },
    "typeRoots": [
      "types/**/*",
      "node_modules/@types"
    ],
    "downlevelIteration": true,
    "lib": ["ES2015", "DOM"],
    "esModuleInterop": true
  },
  "include": [
		"src/**/*"
	]
}
